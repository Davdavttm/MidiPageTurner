<Page
    x:Class="MidiPageTurner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MidiPageTurner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="12">
        <TextBlock Text="MIDI Input Device" />
        <ListBox x:Name="MidiInListBox"/>
        <Button x:Name="RefreshInputButton" Content="Refresh input devices" Click="RefreshInputButton_Click"/>
        <TextBlock Text="MIDI Trigger" />
        <ListBox x:Name="MidiTriggerListBox" SelectedIndex="0">
            <ListBoxItem>Soft Pedal (Left)</ListBoxItem>
            <ListBoxItem>Sostenuto Pedal (Middle)</ListBoxItem>
        </ListBox>
        <TextBlock Text="Page Turn Key" />
        <ListBox x:Name="PageTurnKeyListBox" SelectedIndex="0">
            <ListBoxItem>Right Arrow Key</ListBoxItem>
            <ListBoxItem>Page Down</ListBoxItem>
            <ListBoxItem>Space Bar</ListBoxItem>
        </ListBox>
        <Button x:Name="StartButton" Content="Start" Click="StartButton_Click"/>
    </StackPanel>
</Page>
